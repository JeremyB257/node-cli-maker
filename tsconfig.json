{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "rootDir": "/",
        "declaration": true,
    },
    "include": ["src/**/*", "index.ts"],
    "exclude": ["node_modules", "dist"]
}
